

<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TKGenericSurveyLib.view.components.SurveySlider" xmlns:surveyItems="clr-namespace:TKGenericSurveyLib.model;assembly=TKGenericSurveyLib">






    <ContentView.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical">
            <Label Text="{Binding Label}" HorizontalOptions="Start" />
            <Slider Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}" Value="{Binding SelectedValue, Mode=TwoWay}" HorizontalOptions="End" />
        </StackLayout>
    </ContentView.Content>
</ContentView>